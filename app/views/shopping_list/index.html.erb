<section class="Shopping flex items-center mx-auto justify-center mt-24">
  <div class="food flex flex-col gap-6 px-10">
      <div class="flex items-center justify-center">
        <%if @recipe_foods.empty?%>
          <h2 class="text-3xl font-extrabold leading-none tracking-tight text-gray-900 md:text-3xl lg:text-3xl dark:text-white">Empty List for this Recipe</h2>
        <%else%>
      </div>
      <div class="flex items-center flex-center">
        <h2 class="text-3xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Shopping List</h2>
      </div>
     <div class="flex flex-col gap-6">
      <div class="flex justify-between">
        <p><strong>Amount of Food items to buy:</strong> <%= @missing_foods.count %></p>
        <p><strong>Total Value:</strong> $<%=@remaining_foods_price %></p>
      </div>

      <div class=" pt-4 relative overflow-x-auto">
        <table class="food-display food-display w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-4">
            <tr>
                <th scope="col" class="px-6 py-3">Item</th>
                <th scope="col" class="px-6 py-3">Food</th>
                <th scope="col" class="px-6 py-3">Quantity</th>
                <th scope="col" class="px-6 py-3">Amount($)</th>
            </tr>
            </thead>
            <tbody>
                <% @missing_foods.each_with_index do |r_food, index| %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <th scope="col" class="px-6 py-3 font-bold"><%=index+1%>.</th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= r_food.name%></th>
                    <td class="px-6 py-4"><%= r_food.quantity%></td>
                    <td class="px-6 py-4"><%= r_food.price%>$</td>         
                </tr>
                <%end%>
            </tbody>
            
        </table>
      </div>
     </div>
    <% end %>
  </div>
</section>